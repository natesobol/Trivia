@page "/categories"
@inject SettingsService SettingsService
@inject ProfileService ProfileService

<h1 class="page-title">Select Categories</h1>
<div class="main-card">
    <div class="category-toolbar category-toolbar--compact">
        <button class="primary-button" @onclick="Save">Save</button>
    </div>
    @if (!string.IsNullOrEmpty(_error))
    {
        <p class="text-danger">@_error</p>
    }
    <div class="category-grid">
        @if (_categories is null)
        {
            <p>Loading categories...</p>
        }
        else
        {
            foreach (var category in _categories)
            {
                var categorySelected = SettingsService.Current.CategoriesSelected.Contains(category.Key);
                <div class="category-card category-panel @(categorySelected ? "is-selected" : string.Empty)">
                    <div class="category-header">
                        <img class="category-icon @GetIconClass(category.Icon)" src="@category.Icon" alt="@category.Display icon" />
                        <div class="category-title">@category.Display</div>
                        <button type="button" class="checkbox-button category-toggle" @onclick="() => ToggleCategory(category.Key)">
                            <img class="checkbox-icon" src="@GetCheckboxImage(categorySelected)" alt="Category toggle" />
                            <span>@(categorySelected ? "Selected" : "Tap to select")</span>
                        </button>
                    </div>
                    <div class="subcategory-list">
                        @foreach (var sub in category.Subcategories)
                        {
                            var isSubSelected = SettingsService.Current.SubCategoriesSelected.Contains(sub.Key);
                            <label class="subcategory-row @(isSubSelected ? "is-selected" : string.Empty)">
                                <img class="subcategory-icon" src="@sub.Icon" alt="@sub.Display icon" />
                                <span class="subcategory-name">@sub.Display</span>
                                <button type="button" class="checkbox-button subcategory-toggle" @onclick="() => ToggleSubcategory(category.Key, sub.Key)">
                                    <img class="checkbox-icon" src="@GetCheckboxImage(isSubSelected)" alt="@sub.Display toggle" />
                                </button>
                            </label>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    private bool _initialized;
    private List<CategoryGroup>? _categories;
    private string? _error;

    private record CategoryGroup(string Key, string Display, string Icon, List<SubcategoryItem> Subcategories);
    private record SubcategoryItem(string Key, string Icon, string Display);

    protected override async Task OnInitializedAsync()
    {
        await EnsureLoadedAsync();
        await LoadCategories();
    }

    private async Task EnsureLoadedAsync()
    {
        if (_initialized) return;
        await SettingsService.InitializeAsync();
        await ProfileService.InitializeAsync();
        _initialized = true;
    }

    private Task LoadCategories()
    {
        var grouped = CategoryCatalog.Categories
            .Select(category => new CategoryGroup(
                category.Slug,
                category.Name,
                AssetCatalog.GetMainCategoryIcon(category.Slug),
                category.Subcategories
                    .Select(sub => new SubcategoryItem(sub.Slug, AssetCatalog.GetSubCategoryIcon(sub.Slug), sub.Name))
                    .ToList()));

        _categories = SettingsService.Current.AlphabeticalCategories
            ? grouped.OrderBy(g => g.Display).ToList()
            : grouped.ToList();

        NormalizeSelections();
        return Task.CompletedTask;
    }

    private void ToggleCategory(string key)
    {
        var group = _categories?.FirstOrDefault(c => c.Key == key);
        if (SettingsService.Current.CategoriesSelected.Contains(key))
        {
            SettingsService.Current.CategoriesSelected.Remove(key);
            if (group is not null)
            {
                foreach (var sub in group.Subcategories)
                {
                    SettingsService.Current.SubCategoriesSelected.Remove(sub.Key);
                }
            }
        }
        else
        {
            SettingsService.Current.CategoriesSelected.Add(key);
            if (group is not null)
            {
                foreach (var sub in group.Subcategories)
                {
                    SettingsService.Current.SubCategoriesSelected.Add(sub.Key);
                }
            }
        }
    }

    private void ToggleSubcategory(string categoryKey, string sub)
    {
        if (SettingsService.Current.SubCategoriesSelected.Contains(sub))
        {
            SettingsService.Current.SubCategoriesSelected.Remove(sub);
        }
        else
        {
            SettingsService.Current.SubCategoriesSelected.Add(sub);
        }

        SyncCategorySelection(categoryKey);
    }

    private string GetCheckboxImage(bool selected)
    {
        return selected
            ? AssetCatalog.GetAssetPath("checked-white.png")
            : AssetCatalog.GetAssetPath("unchecked-white.png");
    }

    private void NormalizeSelections()
    {
        if (_categories is null) return;

        SettingsService.Current.CategoriesSelected = SettingsService.Current.CategoriesSelected
            .Select(CategoryCatalog.GetMainSlug)
            .Where(key => !string.IsNullOrWhiteSpace(key))
            .ToHashSet();

        SettingsService.Current.SubCategoriesSelected = SettingsService.Current.SubCategoriesSelected
            .Select(NormalizeSubSelection)
            .Where(key => !string.IsNullOrWhiteSpace(key))
            .ToHashSet();

        foreach (var category in _categories)
        {
            var allSubsSelected = category.Subcategories.All(s => SettingsService.Current.SubCategoriesSelected.Contains(s.Key));

            if (SettingsService.Current.CategoriesSelected.Contains(category.Key) || allSubsSelected)
            {
                SettingsService.Current.CategoriesSelected.Add(category.Key);
                foreach (var sub in category.Subcategories)
                {
                    SettingsService.Current.SubCategoriesSelected.Add(sub.Key);
                }
            }
        }
    }

    private void SyncCategorySelection(string categoryKey)
    {
        var group = _categories?.FirstOrDefault(c => c.Key == categoryKey);
        if (group is null) return;

        var allSelected = group.Subcategories.All(s => SettingsService.Current.SubCategoriesSelected.Contains(s.Key));

        if (allSelected)
        {
            SettingsService.Current.CategoriesSelected.Add(categoryKey);
        }
        else
        {
            SettingsService.Current.CategoriesSelected.Remove(categoryKey);
        }
    }

    private static string NormalizeSubSelection(string key)
    {
        var sub = CategoryCatalog.GetSubSlug(key);
        var main = CategoryCatalog.GetMainSlug(key);
        if (!string.IsNullOrWhiteSpace(sub))
        {
            return $"{main}__{sub}";
        }

        return string.IsNullOrWhiteSpace(main) ? string.Empty : main;
    }

    private string GetIconClass(string iconPath)
    {
        return iconPath.Contains("email.png", StringComparison.OrdinalIgnoreCase)
            ? "mail-icon"
            : string.Empty;
    }

    private async Task Save()
    {
        await SettingsService.SaveAsync();
    }
}
